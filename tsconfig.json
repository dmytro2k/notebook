{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "ts-node": {
    "files": true
  },
  "include": ["@types", "src", "src/**/*"],
  "exclude": ["node_modules", "dist/*"]
}
